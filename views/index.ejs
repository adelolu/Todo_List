<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    
  </head>
  <body>
    <center>
      <h1>Todo List</h1>
      <form
        class="w-50"
        action="/upload"
        method="post"
      >
      <div>
        <label class="form-label" for="tas">Enter task:</label>
        <input type="text" name="task"  required
          class="form-control "
        />
        <label class="form-label">Content:</label>

        <input type="text" name="content"  required
        class="form-control"
      />
      </div>
       
        <button class="btn bg-dark-subtle text-white mt-2" type="submit">Add task</button>
      </form>

      <div class="w-75">
          <% task.forEach((element,index )=> { %>
          <div class="<%= element.complete ? "mt-3 bg-dark-subtle text-white shadow p-1 d-flex justify-content-evenly" : "mt-3 shadow p-1 d-flex justify-content-evenly" %>">
           
            <div><%= element.task %></div>
            <div><%= element.content %></div>
            <form action="/checked/<%= index %>" method="post">
              <button class="btn" type="submit">check<i class="fa fa-check"></i></button>
            </form>
            <form action="/delete/<%= index %>" method="post">
              <button class="btn" type="submit">delete<i class="fas fa-trash" ></i></button>
            </form>
             <form action="/update/<%= index %>" method="get">
              <button class="btn " type="submit">edit</button>
            </form>

          </div>
          <% }) %>
      <!-- </div> -->
    </center>
  </body>
</html>
